<included>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- @formatter:off -->
<encoder>
    <pattern>%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %5p ${PID:--} --- [${service.name:--},${service.version:--}] [%X{X-B3-TraceId:--},%X{X-B3-SpanId:--},%X{X-Span-Export:--}] [%15.15t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
    <charset>utf8</charset>
</encoder>
<!-- @formatter:off -->

        <!-- @formatter:off -->
<file>${LOG_FILE}</file>
<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
    <cleanHistoryOnStart>${LOG_FILE_CLEAN_HISTORY_ON_START:-false}</cleanHistoryOnStart>
    <fileNamePattern>${ROLLING_FILE_NAME_PATTERN:-${LOG_FILE}.%d{yyyy-MM-dd}.%i.gz}</fileNamePattern>
    <maxFileSize>${LOG_FILE_MAX_SIZE:-1GB}</maxFileSize>
    <maxHistory>${LOG_FILE_MAX_HISTORY:-14}</maxHistory>
    <totalSizeCap>${LOG_FILE_TOTAL_SIZE_CAP:-0}</totalSizeCap>
</rollingPolicy>
<!-- @formatter:on -->

    </appender>
</included>
